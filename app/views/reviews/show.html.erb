<h1>Small Review by: <%= @review.user.username %></h1>
<% if user_signed_in? && (current_user.wrote_this(@review) || current_user.admin) %>
  <%= link_to "Edit Review", edit_review_path %> |
  <%= link_to 'Delete Review',  @review,  method: :delete, data: { confirm: 'Are you sure?' } %> 
<% end %>
<br>
<%= link_to 'Back To All Reviews', reviews_path %> 
<br>
<br>
<h2><%= @review.title %></h2>
<small>Genre: <%= link_to @review.category.name, "genres/#{@review.category_id}" %></small> |
<small>Submitted by: <%= @review.user.username %></small><br>
<br>
<p><%= @review.content %></p>
<small>Created: <%= @review.created_at %></small> <small>Updated: <%= @review.updated_at %></small>
<br>
<br>
<%= render partial: 'comments/form' %>
<br>
<% if @review.comments.present? %>
<h5>Comments:</h5>
<%= render partial: 'reviews/comment', collection: @review.comments %>
<% end %>

